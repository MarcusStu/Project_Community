@*@model IEnumerable<MarcusOneDbTest.Models.ApplicationUser>*@
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Admin Control Panel.</h3>
            <!-- tabs -->
            <div class="tabbable tabs-left">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#users" data-toggle="tab">Users</a></li>
                    <li><a href="#roles" data-toggle="tab">Roles</a></li>
                    <li><a href="#news" data-toggle="tab">News</a></li>
                    <li><a href="#forum" data-toggle="tab">Forum</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="users">
                        <div class="col-md-12 col-centered container-fluid">
                            <h1>Users Control Panel</h1>
                            <p>These lists are meant to identify articles which deserve editor attention because they are the most important for an encyclopedia to have, as determined by the community of participating editors. They may also be of interest to readers as an alternative to lists of overview articles.</p>
                        </div>
                    </div>
                    <div class="tab-pane" id="roles">
                        <div class="">
                            <h1>Roles Control Panel</h1>

                            <div>
                                @Html.ActionLink("Create New Role", "Index", "Role", null, new { @class = "btn btn-success" })

                                @Html.ActionLink("Delete Role", "Delete", "Role", null, new { @class = "btn btn-danger" })

                                @Html.ActionLink("Delete Role from User", "DeleteRoleFromUser", "Role", null, new { @class = "btn btn-danger" })

                                @Html.ActionLink("Assign user to Role", "Assign", "Admin", null, new { @class = "btn btn-warning" })
                            </div>

                            @*Print list of users*@



                            <h3>Get Roles for a User</h3>
                            @using (Html.BeginForm("GetRoles", "Admin"))
            {
                                @Html.AntiForgeryToken()
                                <div>
                                    @Html.DropDownList("Users", (IEnumerable<SelectListItem>)ViewBag.Users, "Select User ...", new { @class = "form-control" })
                                    <br />
                                    <input type="submit" class="btn btn-default" value="Get Roles for this User" />
                                </div>
                            }

                            @if (ViewBag.RolesForThisUser != null)
            {
                                <div>
                                    <h3>Roles for this user </h3>
                                    <ol>
                                        @foreach (string s in ViewBag.RolesForThisUser)
                                        {
                                            <li>@s</li>
                                        }
                                    </ol>
                                </div>
                            }



                            <b>@ViewBag.ResultMessage</b>
                        </div>
                    </div>

                    <div class="tab-pane" id="news">
                        <div class="">
                            <h1>News Control Panel</h1>
                            <p>meant to identify articles which deserve editor attention because they are the most important for an encyclopedia to have, as determined by the community of participating editors. They may also be of interest to readers as an alternative to lists of overview articles.</p>
                        </div>
                    </div>

                    <div class="tab-pane" id="forum">
                        <div class="">
                            <h1>Forum Control Panel</h1>
                            <p>deserve editor attention because they are the most important for an encyclopedia to have, as determined by the community of participating editors. They may also be of interest to readers as an alternative to lists of overview articles.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /tabs -->
        </div>
    </div>
</div>




            


<style>
.tabs-left > .nav-tabs {
  border-bottom: 0;
}

.tab-content > .tab-pane,
.pill-content > .pill-pane {
  display: none;
}

.tab-content > .active,
.pill-content > .active {
  display: block;
}

.tabs-left > .nav-tabs > li {
  float: none;
}

.tabs-left > .nav-tabs > li > a {
  min-width: 74px;
  margin-right: 0;
  margin-bottom: 3px;
}

.tabs-left > .nav-tabs {
  float: left;
  margin-right: 19px;
  border-right: 1px solid #ddd;
}

.tabs-left > .nav-tabs > li > a {
  margin-right: -1px;
  -webkit-border-radius: 4px 0 0 4px;
     -moz-border-radius: 4px 0 0 4px;
          border-radius: 4px 0 0 4px;
}

.tabs-left > .nav-tabs > li > a:hover,
.tabs-left > .nav-tabs > li > a:focus {
  border-color: #eeeeee #dddddd #eeeeee #eeeeee;
}

.tabs-left > .nav-tabs .active > a,
.tabs-left > .nav-tabs .active > a:hover,
.tabs-left > .nav-tabs .active > a:focus {
  border-color: #ddd transparent #ddd #ddd;
  *border-right-color: #ffffff;
}
</style>