                            }
                            else
                            {
                                string commentValue = item.Comments.Count.ToString();

                                @Html.DisplayFor(modelItem => commentValue)
                            }*@
            @*</td>
                <td>
                    @Html.ActionLink("More Info", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-xs btn-block" })*@

            @*Admin stuff*@
            @*@if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("SuperAdmin"))
                    {*@
            @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-xs btn-block" });*@
            @*@Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-xs btn-block" });*@
            @*}
                            }
                        </td>
                    </tr>
                }*@

            @*</table>*@
        </div>

    </div>
</div>



<style>
    body {
        /*margin-top: 50px;*/
    }

    #admin_buttons_news {
        margin-top: 5px;
        margin-right: 5px;
        float: right;
    }

    #time_news {
        color: #FFF;
        text-decoration: none;
        background-color: transparent;
    }

    a:hover {
        text-decoration: none;
        background-color: transparent;
        color: #FFF;
    }

    a {
        color: chartreuse;
    }

        a:visited {
            text-decoration: none;
        }

    .btn {
        transition: all .2s linear;
        -webkit-transition: all .2s linear;
        -moz-transition: all .2s linear;
        -o-transition: all .2s linear;
    }

    .btn-read-more {
        padding: 5px;
        text-align: center;
        border-radius: 0px;
        display: inline-block;
        border: 2px solid chartreuse;
        text-decoration: none;
        text-transform: uppercase;
        font-weight: bold;
        font-size: 12px;
        color: chartreuse;
    }

        .btn-read-more:hover {
            color: #393939;
            background: chartreuse;
        }

    .post {
