@model Identity_Sample.Models.ForumThread

@{
    ViewBag.Title = "Create";
}

<div class="form-horizontal">
    <h4>Create New ForumThread</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.ForumSectionID, new { Name = "ForumSectionID" })

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlenght = "50", @placeholder = "Add a title here!" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", @rows = "5", @required = "required", @maxlenght = "1000", @placeholder = "Max 1000 characters!" } })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
